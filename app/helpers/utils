#!/bin/bash

# Utility functions for true/false checking
is_true() {
    lower=$(echo "${1:-}" | tr "[:upper:]" "[:lower:]")
    case "$lower" in
        yes|y|on|true|1) return 0 ;;
        *) return 1 ;;
    esac
}

is_false() {
    lower=$(echo "${1:-}" | tr "[:upper:]" "[:lower:]")
    case "$lower" in
        no|n|off|false|0) return 0 ;;
        # "") return 0 ;;  # Empty is not false, it's null
        *) return 1 ;;   # Unknown is false
    esac
}

# Debug checking function
karen_debug() {
    is_true "$KAREN_DEBUG" || is_true "$DEBUG"
}

log() {
    [ -z "$1" ] && return
    err=$(echo "$1" | grep -E "^[0-9]+$" || true)
    [ "$err" ] && shift
    [ "$1" = "-n" ] && n="-n" && shift || n=
    [ -n "$err" ] || karen_debug || return 0
    echo $n "$PGM: $@" >&2
}

end() {
    local caller_file="${BASH_SOURCE[1]}"
    local caller_line="${BASH_LINENO[0]}"
    # err=$(echo "$1" | grep -E "^[1-9][0-9]*$" || true)
    err=$(echo "${1:-}" | grep -E "^[0-9]+$" || true)
    [ "$err" ] && shift
    if [ "$err" -a "$err" != "0" ]; then
        prefix="[ERROR]"
        karen_debug && suffix="on $caller_file:$caller_line" || suffix=
    else
        prefix=
        suffix=
    fi
        
    [ "${1:-}" = "-n" ] && n="-n" && shift || n=
    message=${@:-Finished processing}
    log $err $prefix "$message" $suffix
    exit ${err:-0}
}

yesno() {
    default=n
    choice="y/N"
    [ "$1" = "y" ] && default=y && choice="Y/n" && shift
    [ "$1" = "-y" ] && default=y && choice="Y/n" && shift
    [ "$@" ] && message="$@" || message="Answer"
    message="$message ($choice) "
    read -u1 -p "$message" answer
    [ "$answer" = "" ] && answer=$default
    answer=$(echo "$answer" | tr "[:upper:]" "[:lower:]")
    [ "$answer" = "y" ] && return 0
    [ "$answer" = "yes" ] && return 0
    return 1
}

get_config() {
    [ -z "$ENV_PATTERN" ] && log 1 "$(system_message error_env_pattern_missing)" && return 1
    set | egrep "$ENV_PATTERN" || log 1 "$(system_message error_empty_config)"
}

usage() {
    echo "Usage: $PGM [COMMAND] [OPTIONS]"
    echo
    cat $KAREN_BASE/app/doc/usage.txt
}

detailed_help() {
    cat $KAREN_BASE/app/doc/help.txt
    end
}
