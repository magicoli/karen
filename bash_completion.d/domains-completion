# bash completion for casting tools

ZONESDIR=/etc/bind/zones

_domains()
{
  local cur
  COMPREPLY=()
  cur=${COMP_WORDS[COMP_CWORD]}
#  case $COMP_CWORD in
#    1)
    COMPREPLY=( $(compgen -W "$(cd $ZONESDIR/ 2>/dev/null && ls *.zone | sed 's/\.zone$//')" -- "$cur" -W) )
#      ;;
#  esac
}
complete -F _domains zoneedit
